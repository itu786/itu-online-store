<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Your Orders</title>
  <link rel="stylesheet" href="/styles/colours.css">
  <link rel="stylesheet" href="/styles/main.css">
</head>
<body>
  <% include ../partials/header.ejs %>
  <main>
    <h2>Your Orders</h2>
    <table>
      <thead>
        <tr>
          <th>Order ID</th>
          <th>Date</th>
          <th>Total</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
        <% orders.forEach(order => { %>
          <tr>
            <td><%= order.id %></td>
            <td><%= order.date %></td>
            <td>$<%= order.total %></td>
            <td><%= order.status %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </main>
</body>
</html>
